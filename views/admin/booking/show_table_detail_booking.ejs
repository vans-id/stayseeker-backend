<div class="card shadow my-4">
  <div class="card-header">
    <a href="/admin/booking" class="btn btn-primary">
      Back
    </a>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <!-- Image Here -->
        <img
          src="https://admin-stayseeker.herokuapp.com/<%= selectedBooking.payments.proofPayment %>"
          alt="image"
          style="width: 100%;"
        />
      </div>
      <div class="col-md-8">
        <!-- Booking Details -->
        <div class="form-group">
          <label>Member Name</label>
          <input
            class="form-control"
            type="text"
            placeholder="<%=
            selectedBooking.memberId.firstName %> <%= selectedBooking.memberId.lastName
            %>"
            readonly
          />
        </div>
        <div class="form-group">
          <label>Total Payment</label>
          <input
            class="form-control"
            type="text"
            placeholder="$ <%= selectedBooking.total %>"
            readonly
          />
        </div>
        <div class="form-group">
          <label>Bank From</label>
          <input
            class="form-control"
            type="text"
            placeholder="<%= selectedBooking.payments.bankFrom
            %>"
            readonly
          />
        </div>
        <div class="form-group">
          <label>Item Title</label>
          <input
            class="form-control"
            type="text"
            placeholder="<%= selectedBooking.itemId.title %>"
            readonly
          />
        </div>
        <!-- Action Button -->
        <%# if (selectedBooking.payments.status ===
        'Proses') { %>
        <div class="row mt-5">
          <form
            action="/admin/booking/<%= selectedBooking.id %>/confirmation?_method=PUT"
            method="POST"
          >
            <button
              type="submit"
              class="btn btn-success mx-3"
            >
              <i class="fas fa-check"></i> Confirm
            </button>
          </form>
          <form
            action="/admin/booking/<%= selectedBooking.id %>/reject?_method=PUT"
            method="POST"
          >
            <button
              type="submit"
              class="btn btn-danger"
            >
              <i class="fas fa-times"></i> Reject
            </button>
          </form>
        </div>
        <%# } %>
      </div>
    </div>
  </div>
</div>
