<div class="card shadow my-4">
  <div class="card-body">
    <div class="row">
      <div class="col-md-5">
        <!-- Form -->
        <form
          action="/admin/bank"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="form-group">
            <input
              type="text"
              class="form-control"
              placeholder="Activity Name"
              name="name"
              required
            />
          </div>
          <div class="form-group">
            <input
              type="text"
              class="form-control"
              placeholder="Type"
              name="type"
              required
            />
          </div>
          <div class="form-group">
            <label>Select Image</label>
            <input
              type="file"
              class="form-control-file"
              name="imageUrl"
              required
            />
          </div>
          <button
            type="submit"
            class="btn btn-primary"
          >
            Add
          </button>
        </form>
      </div>
      <div class="col-md-7">
        <!-- Table -->
        <div class="table-responsive">
          <table
            class="table table-bordered"
            id="dataTableActivity"
            width="100%"
            cellspacing="0"
          >
            <thead>
              <tr>
                <th>No</th>
                <th>Name</th>
                <th>Type</th>
                <th>Image</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody></tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
