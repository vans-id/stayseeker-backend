<div class="card shadow my-4">
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>No</th>
            <th>Title</th>
            <th>Price</th>
            <th>City</th>
            <th>Country</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for( let i = 0; i < items.length; i++ ) {
          %>
          <tr>
            <td><%= i + 1 %></td>
            <td><%= items[i].title %></td>
            <td>$<%= items[i].price %></td>
            <td><%= items[i].city %></td>
            <td><%= items[i].country %></td>
            <td>
              <form
                action="/admin/item/<%= items[i].id %>?_method=DELETE"
                method="POST"
              >
                <a
                  href="/admin/item/show-image/<%= items[i].id %>"
                  class="btn btn-info btn-circle btn-sm mt-1"
                >
                  <i class="fas fa-image"></i>
                </a>
                <a
                  href="/admin/item/<%= items[i].id %>"
                  class="btn btn-warning btn-circle btn-sm mt-1"
                >
                  <i class="fas fa-edit"></i>
                </a>
                <button
                  type="submit"
                  class="btn btn-danger btn-circle btn-sm mt-1"
                >
                  <i class="fas fa-trash"></i>
                </button>
                <a
                  href="/admin/item/show-detail-item/<%= items[i].id %>"
                  class="btn btn-success btn-circle btn-sm button-update mt-1"
                >
                  <i class="fas fa-plus"></i>
                </a>
              </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>
